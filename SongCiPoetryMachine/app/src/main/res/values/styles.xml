<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- h like css <h> -->
    <style name="h">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="h1" parent="h">
        <item name="android:textSize">@dimen/text_size_h1</item>
    </style>

    <style name="h2" parent="h">
        <item name="android:textSize">@dimen/text_size_h1</item>
    </style>

    <style name="h3" parent="h">
        <item name="android:textSize">@dimen/text_size_h3</item>
    </style>

    <style name="h4" parent="h">
        <item name="android:textSize">@dimen/text_size_h4</item>
    </style>

    <style name="h5" parent="h">
        <item name="android:textSize">@dimen/text_size_h5</item>
    </style>

    <style name="h6" parent="h">
        <item name="android:textSize">@dimen/text_size_h6</item>
    </style>

    <style name="h7" parent="h">
        <item name="android:textSize">@dimen/text_size_h7</item>
    </style>

    <style name="h8" parent="h">
        <item name="android:textSize">@dimen/text_size_h8</item>
    </style>

</resources>
